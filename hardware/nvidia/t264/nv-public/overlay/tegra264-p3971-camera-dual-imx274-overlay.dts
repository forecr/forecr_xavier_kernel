/* Jetson Device-tree overlay for Camera Dual-IMX274 on t264 platforms */

/dts-v1/;
/plugin/;

#include <dt-bindings/clock/tegra264-clk.h>
#include <dt-bindings/gpio/tegra264-gpio.h>

/* camera control gpio definitions */
#define CAM0_RST_L	TEGRA264_MAIN_GPIO(V, 2)
#define CAM0_PWDN	TEGRA264_MAIN_GPIO(AL, 1)
#define CAM1_RST_L	TEGRA264_MAIN_GPIO(Q, 3)
#define CAM1_PWDN	TEGRA264_MAIN_GPIO(Q, 2)

#define JETSON_COMPATIBLE	"nvidia,p3971-0089+p3834-0008", "nvidia,p3971-0050+p3834-0005", "nvidia,p3971-0080+p3834-0008", "nvidia,p3971-0080+p3834-0000"

/ {
	overlay-name = "Jetson Camera Dual-IMX274";
	jetson-header-name = "Jetson AGX CSI Connector";
	compatible = JETSON_COMPATIBLE;

	fragment@0 {
		target-path = "/";

		board_config {
			ids = "LPRD-dual-imx274-002";
			sw-modules = "kernel";
		};

		__overlay__ {
			tegra-capture-vi {
				status = "okay";
				num-channels = <2>;
				ports {
					status = "okay";
					port@0 {
						status = "okay";
						endpoint {
							status = "okay";
							port-index = <0>;
							bus-width = <4>;
							vc-id = <0>;
							remote-endpoint = <&liimx274_csi_out0>;
						};
					};
					port@1 {
						status = "okay";
						endpoint {
							status = "okay";
							port-index = <2>;
							bus-width = <4>;
							vc-id = <0>;
							remote-endpoint = <&liimx274_csi_out1>;
						};
					};
				};
			};

			tegra-camera-platform {
				status = "okay";
				compatible = "nvidia, tegra-camera-platform";
				modules {
					status = "okay";
					module0 {
						status = "okay";
						badge = "imx274_bottom_A6V26";
						position = "bottom";
						orientation = "0";
						drivernode0 {
							status = "okay";
							pcl_id = "v4l2_sensor";
							sysfs-device-tree = "/sys/firmware/devicetree/base/bus@0/i2c@810c6d0000/tca9546@70/i2c@0/imx274_a@1a";
						};
						drivernode1 {
							status = "okay";
							pcl_id = "v4l2_lens";
							sysfs-device-tree = "/sys/firmware/devicetree/base/bus@0/lens_imx274@A6V26/";
						};
					};
					module1 {
						status = "okay";
						badge = "imx274_top_A6V26";
						position = "top";
						orientation = "0";
						drivernode0 {
							status = "okay";
							pcl_id = "v4l2_sensor";
							sysfs-device-tree = "/sys/firmware/devicetree/base/bus@0/i2c@810c6d0000/tca9546@70/i2c@1/imx274_c@1a";
						};
						drivernode1 {
							status = "okay";
							pcl_id = "v4l2_lens";
							sysfs-device-tree = "/sys/firmware/devicetree/base/bus@0/lens_imx274@A6V26/";
						};
					};
				};
			};

			bus@0 {
				gpio@810c300000 {
					camera-control-output-low {
						gpio-hog;
						output-low;
						gpios = <CAM0_RST_L 0 CAM0_PWDN 0>;
						label = "cam0-rst", "cam0-pwdn";
					};
				};

				host1x@8181200000 {
					nvcsi@8188000000 {
						num-channels = <2>;
						status = "okay";
						channel@0 {
							status = "okay";
							ports {
								status = "okay";
								port@0 {
									status = "okay";
									endpoint@0 {
										status = "okay";
										port-index = <0>;
										bus-width = <4>;
										remote-endpoint = <&liimx274_imx274_out0>;
									};
								};
								port@1 {
									status = "okay";
									endpoint@1 {
										status = "okay";
										remote-endpoint = <&liimx274_vi_in0>;
									};
								};
							};
						};
						channel@1 {
							status = "okay";
							ports {
								status = "okay";
								port@0 {
									status = "okay";
									endpoint@2 {
										status = "okay";
										port-index = <2>;
										bus-width = <4>;
										remote-endpoint = <&liimx274_imx274_out1>;
									};
								};
								port@1 {
									status = "okay";
									endpoint@3 {
										status = "okay";
										remote-endpoint = <&liimx274_vi_in1>;
									};
								};
							};
						};
					};
				};

				i2c@810c6d0000 {
					tca9546@70 {
						status = "okay";
						compatible = "nxp,pca9546";
						reg = <0x70>;
						#address-cells = <1>;
						#size-cells = <0>;
						skip_mux_detect = "yes";

						i2c@0 {
							status = "okay";
							reg = <0>;
							i2c-mux,deselect-on-exit;
							#address-cells = <1>;
							#size-cells = <0>;

							imx274_a@1a {
								status = "okay";
								/* Define any required hw resources needed by driver */
								/* ie. clocks, io pins, power sources */
								clocks = <&bpmp TEGRA264_CLK_EXTPERIPH1>,
										<&bpmp TEGRA264_CLK_EXTPERIPH1>;
								clock-names = "extperiph1", "pllp_grtba";
								mclk = "extperiph1";
								reset-gpios = <&gpio_main CAM0_RST_L GPIO_ACTIVE_HIGH>;

								ports {
									status = "okay";
									port@0 {
										status = "okay";
										endpoint {
											status = "okay";
											port-index = <0>;
											bus-width = <4>;
											remote-endpoint = <&liimx274_csi_in0>;
										};
									};
								};
							};
						};

						i2c@1 {
							status = "okay";
							reg = <1>;
							i2c-mux,deselect-on-exit;
							#address-cells = <1>;
							#size-cells = <0>;

							imx274_c@1a {
								status = "okay";
								/* Define any required hw resources needed by driver */
								/* ie. clocks, io pins, power sources */
								clocks = <&bpmp TEGRA264_CLK_EXTPERIPH1>,
										<&bpmp TEGRA264_CLK_EXTPERIPH1>;
								clock-names = "extperiph1", "pllp_grtba";
								mclk = "extperiph1";
								reset-gpios = <&gpio_main CAM0_PWDN GPIO_ACTIVE_HIGH>;

								ports {
									status = "okay";
									port@0 {
										status = "okay";
										endpoint {
											status = "okay";
											port-index = <2>;
											bus-width = <4>;
											remote-endpoint = <&liimx274_csi_in1>;
										};
									};
								};
							};
						};
					};
				};
			};
		};
	};
};
